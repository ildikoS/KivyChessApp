<DragPiece>:
    # Define the properties for the DragLabel
    size_hint: (None, None)
    size: 80, 80
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_distance: 0

<NewGameButton>:
    text: "Új játék"
    font_size: 15
    size: 100, 60
    size_hint: None, None
    pos: 320, 780

<gameEndPopup>:
    title: "Játék vége"
    size_hint: None, None
    size: 400, 400

    Label:
        text: root.text

<MainScreen>:
    name: "main"
    FloatLayout:
        Label:
            text: "Sakk Játék"
            size_hint: None, None
            size: 200, 100
            pos: 240, 720
        Button:
            size_hint: None, None
            size: 200, 100
            pos: 240, 420
            text: 'Start'
            on_press: root.manager.current = 'game'

<GameScreen>:
    name: "game"

