<DragPiece>:
    # Define the properties for the DragLabel
    size_hint: (None, None)
    size: 80, 80
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_distance: 0

<NewGameButton>:
    text: "Új játék"
    font_size: 15
    size_hint: .2, .1
    pos_hint: {'x': .1, 'y': .8}

<ReStepButton>:
    text: "Visszalépés"
    font_size: 15
    size_hint: .2, .1
    pos_hint: {'x': .6, 'y': .8}

<gameEndPopup>:
    title: "Játék vége"
    size_hint: None, None
    size: 550, 350

    Label:
        text: root.text

<MainScreen>:
    name: "main"
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Image:
            source: 'imgs/title.png'
            pos_hint: {'x': 0.05, 'y': 0.4}

        Button:
            size_hint: 0.3, 0.1
            pos_hint: {'x': .35, 'y': .5}
            text: 'Start'
            on_release:
                app.root.current =  'game'
                root.manager.transition.direction = "left"

        Button:
            size_hint: 0.3, 0.1
            pos_hint: {'x': .35, 'y': .25}
            text: 'Gyakorlás'
            on_release:
                app.root.current =  'practice'
                root.manager.transition.direction = "left"

<GameScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "game"
    Button:
        text: "Vissza"
        font_size: 15
        size_hint: 0.1, 0.05
        pos_hint: {'x': .05, 'y': .92}
        on_release:
            app.root.current = 'main'
            root.manager.transition.direction = "right"

<PracticeScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "practice"
    Button:
        text: "Vissza"
        font_size: 15
        size_hint: 0.1, 0.05
        pos_hint: {'x': .05, 'y': .92}
        on_release:
            app.root.current = 'main'
            root.manager.transition.direction = "right"

