<DragPiece>:
    # Define the properties for the DragLabel
    size_hint: (None, None)
    size: 80, 80
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_distance: 0

<NewGameButton>:
    text: "Új játék"
    font_size: 15
    size: 200, 100
    size_hint: None, None
    pos: 100, 680

<ReStepButton>:
    text: "Visszalépés"
    font_size: 15
    size: 200, 100
    size_hint: None, None
    pos: 400, 680

<gameEndPopup>:
    title: "Játék vége"
    size_hint: None, None
    size: 550, 350

    Label:
        text: root.text

<MainScreen>:
    name: "main"
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Image:
            source: f'128h/title.png'
            pos: 30, 300

        Button:
            size_hint: None, None
            size: 200, 100
            pos: 240, 420
            text: 'Start'
            on_release:
                app.root.current =  'game'
                root.manager.transition.direction = "left"

        Button:
            size_hint: None, None
            size: 200, 100
            pos: 240, 200
            text: 'Gyakorlás'
            on_release:
                app.root.current =  'practice'
                root.manager.transition.direction = "left"

<GameScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "game"
    Button:
        text: "Vissza"
        font_size: 15
        size: 100, 50
        size_hint: None, None
        pos: 50, 920
        on_release:
            app.root.current = 'main'
            root.manager.transition.direction = "right"

<PracticeScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "practice"
    Button:
        text: "Vissza"
        font_size: 15
        size: 100, 50
        size_hint: None, None
        pos: 50, 920
        on_release:
            app.root.current = 'main'
            root.manager.transition.direction = "right"

