<DragPiece>:
    # Define the properties for the DragLabel
    size_hint: (None, None)
    size: 80, 80
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_distance: 0

<NewGameButton>:
    text: "Új játék"
    font_size: 15
    size: 200, 100
    size_hint: None, None
    pos: 100, 680

<ReStepButton>:
    text: "Visszalépés"
    font_size: 15
    size: 200, 100
    size_hint: None, None
    pos: 400, 680

<gameEndPopup>:
    title: "Játék vége"
    size_hint: None, None
    size: 550, 350

    Label:
        text: root.text

<MainScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Image:
            source: f'128h/title.png'
            pos: 30, 300

        Button:
            size_hint: None, None
            size: 200, 100
            pos: 240, 420
            text: 'Start'
            on_press: root.manager.current = 'game'

        Button:
            size_hint: None, None
            size: 200, 100
            pos: 240, 200
            text: 'Gyakorlás'
            on_press: root.manager.current = 'practice'

<GameScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "game"

<PracticeScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "practice"

