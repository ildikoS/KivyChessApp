<DragPiece>:
    # Define the properties for the DragLabel
    size_hint: (None, None)
    size: 80, 80
    drag_rectangle: self.x, self.y, self.width, self.height
    drag_distance: 0

<NewGameButton>:
    text: "Új játék"
    font_size: 15
    size: 200, 100
    size_hint: None, None
    pos: 100, 680

<ReStepButton>:
    text: "Visszalépés"
    font_size: 15
    size: 200, 100
    size_hint: None, None
    pos: 400, 680

<gameEndPopup>:
    title: "Játék vége"
    size_hint: None, None
    size: 550, 350

    Label:
        text: root.text

<MainScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    FloatLayout:
        Label:
            text: "Sakk Játék"
            size_hint: None, None
            size: 200, 100
            pos: 240, 720
        Button:
            size_hint: None, None
            size: 200, 100
            pos: 240, 420
            text: 'Start'
            on_press: root.manager.current = 'game'

<GameScreen>:
    canvas.before:
        Color:
            rgb: 58/255.0, 46/255.0, 46/255.0
        Rectangle:
            pos: self.pos
            size: self.size
    name: "game"

